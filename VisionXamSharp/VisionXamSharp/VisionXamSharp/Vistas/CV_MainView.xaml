<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisionXamSharp.CV_MainView">
    <ScrollView>
        <StackLayout>
            <Button Text="Cargar imagen" Clicked="Imagen_Foto"/>
            <Label x:Name="Mensaje" HorizontalOptions="Center" VerticalOptions="Center"/>
            <ActivityIndicator x:Name="Indicador"/>
            <Button Text="Mostrar resultados" Clicked="comprobar"/>
            <Label x:Name="resultado"/>
        </StackLayout>
    </ScrollView>
</ContentPage>